<%= form_for @project, remote: true do |f| %>
<div class="row">
  <div class="col-xs-12">
    <div class="input-group input-group-lg">
      <%= f.text_field :name, class: "form-control" %>
      <div class="input-group-btn">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
<% end %>