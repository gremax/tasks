<!DOCTYPE html>
<html>
<head>
  <title>Simple Todo Lists</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<% flash.each do |key, value| %>
  <div class="notify alert alert-<%= key %>" role="<%= key %>"><%= value %></div>
<% end %>

<% if logged_in? %>
  <div class="profile">
    <p><b><%= current_user.email %></b></p>
    <p><%= link_to "Sign out", signout_path, method: :delete %></p>
  </div>
<% end %>
<h1>Simple Todo Lists</h1>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
