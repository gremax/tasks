<%= link_to 'javascript:void(0)', id: "set_deadline_#{task.id}"  do %>
  <span class="glyphicon glyphicon-time" aria-hidden="true"></span>
<% end %>
&nbsp;
<%= link_to 'javascript:void(0)', class: "handle" do %>
  <span class="glyphicon glyphicon-move" aria-hidden="true"></span>
<% end %>
&nbsp;
<%= link_to 'javascript:void(0)', id: "edit_inline_#{task.id}" do %>
